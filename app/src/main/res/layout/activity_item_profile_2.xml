<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_bg_grey"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/color_bg_blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <Button
            android:id="@+id/btnGoBack2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="372dp"
            android:layout_marginBottom="101dp"
            android:background="@drawable/backbutton2"
            android:textColor="@color/color_bg_gold"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewId2"
            android:layout_width="74dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="191dp"
            android:layout_marginBottom="113dp"
            android:text=" " />

        <TextView
            android:id="@+id/AdName"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="52dp"
            android:text="Mercedez Benz S200"
            android:textColor="@color/color_bg_grey"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AdDate"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="28dp"
            android:text="posted on 07-10-2020"
            android:textColor="@color/color_bg_ash"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AdSellerName"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="7dp"
            android:text="by Saman"
            android:textColor="@color/color_bg_grey"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="44dp"
            android:numStars="1"
            android:progressTint="@color/color_bg_gold"
            android:secondaryProgressTint="@color/color_bg_grey" />

        <TextView
            android:id="@+id/textViewBackToHome"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="291dp"
            android:layout_marginBottom="104dp"
            android:text="Home"
            android:textColor="@color/color_bg_gold"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="17dp"
            android:background="@android:color/transparent"
            android:src="@drawable/next"
            android:text="" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="117dp"
            android:background="@android:color/transparent"
            android:src="@drawable/prev"
            android:text="" />

        <ImageView
            android:id="@+id/ItemProfileImage"
            android:layout_width="320dp"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="50dp">

        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Rs.EEEEE"
            android:textSize="16sp"
            android:paddingTop="6dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingBottom= "6dp"
            android:background="@drawable/adapter_border_1"
            android:textColor="@color/color_bg_gold">

        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="370dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:background="@color/color_bg_gold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:layout_width="69dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/profilemale">

        </ImageView>

        <TextView
            android:id="@+id/button9"
            android:layout_width="102dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/btn_message"
            android:text="Message"
            android:textAlignment="center"
            android:textColor="@color/color_bg_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/callButton"
            android:layout_width="78dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="47dp"
            android:background="@drawable/btn_call"
            android:text="Call"
            android:foreground="?android:attr/selectableItemBackground"
            android:textAlignment="center"
            android:textColor="@color/color_bg_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/seller_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginBottom="51dp"
            android:text="Saman Perera"
            android:textColor="#383838"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="32dp"
            android:text="Colombo,Sri Lanka"
            android:textSize="10sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="14dp"
            android:text="+94712303299"
            android:textSize="10sp">

        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="370dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:background="@color/color_bg_gold"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="255dp"
            android:layout_marginBottom="211dp"
            android:text="Specifications"
            android:textColor="#383838"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="368dp"
            android:layout_height="199dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="0dp"
