<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/adapter_border_1"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/textViewDate"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="4dp"
           android:layout_marginEnd="65dp"
           android:gravity="center"
           android:text="Date"
           android:textSize="12sp" />
   </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="176dp"
        android:layout_height="124dp"
        android:layout_margin="10dp" />
<!--        app:srcCompat="@drawable/qrimage"-->


    <RelativeLayout
        android:id="@+id/dxgdx"
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <TextView
            android:id="@+id/textViewAdName"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="6dp"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="18sp"
            tools:text="Ad Name" />

        <TextView
            android:id="@+id/textViewSellerName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="6dp"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:text="Seller name" />

        <TextView
            android:id="@+id/textViewSpecialText"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="437dp"
            android:text="Special Text"
            android:textAlignment="center"
            android:textColor="#8D8D8D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="73dp"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="#1B5E20"
            android:textSize="14sp" />

    </RelativeLayout>



</LinearLayout>
