<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.postAd.PostUI2">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/color_bg_blue">


        <Button
            android:id="@+id/btnGoBack4"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="372dp"
            android:layout_marginBottom="101dp"
            android:background="@drawable/backbutton2"
            android:textColor="@color/color_bg_gold"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCategoriesTitle3"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="57dp"
            android:text="Post an Ad"
            android:textColor="@color/color_bg_grey"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCategoriesTitle4"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="167dp"
            android:layout_marginBottom="13dp"
            android:text="  Ad Details Form"
            android:textColor="@color/color_bg_grey"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBackToHome3"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="291dp"
            android:layout_marginBottom="104dp"
            android:text="Back"
            android:textColor="@color/color_bg_gold"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:background="@color/color_bg_grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <EditText
                android:id="@+id/title_in"
                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/edit_text_border_1"
                android:ems="10"
                android:hint="Title Here.."
                android:inputType="textPersonName"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:textAlignment="center"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/select_loc_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/spinner_background"

                android:entries="@array/categories_Location"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/price_in"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/edit_text_border_1"
                android:ems="10"
                android:hint="Price.."
                android:inputType="textPersonName"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ad_details_in"
                android:layout_width="match_parent"
                android:layout_height="139dp"

                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="15dp"

                android:background="@drawable/edit_text_border_1"
                android:ems="10"
                android:hint="Ad Details Here.."
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView"
                    android:src="@drawable/camera"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/add_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttonk_customize"
                android:text="Add Image"
                android:textColor="#FFFF"
                android:textAllCaps="false"
                tools:layout_marginHorizontal="150dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:background="@color/color_bg_ash"
                android:text="Contact Details"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/TxtContactName"
                    android:layout_width="wrap_content"

                    android:layout_height="40dp"
                    android:layout_margin="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/edit_text_border_1"
                    android:ems="10"
                    android:hint="Name:"
                    android:inputType="textPersonName"
                    android:padding="3dp"
                    android:paddingStart="9dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/TxtcontactEmail"
                    android:layout_width="wrap_content"

                    android:layout_height="40dp"
                    android:layout_margin="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/edit_text_border_1"
                    android:ems="10"
                    android:hint="Email:"

                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/TxtContactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_border_1"
                    android:ems="10"
                    android:hint="Phone:"
                    android:inputType="textPersonName" />
            </LinearLayout>


            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/adapter_border_1"
                android:drawableLeft="@drawable/submiticon"
                android:paddingStart="60dp"
                android:text="Submit"
                android:textColor="@color/color_bg_gold"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </View>

        </LinearLayout>
    </ScrollView>


</LinearLayout>