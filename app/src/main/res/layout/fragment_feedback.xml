<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey"
    android:orientation="vertical"
    tools:context=".ui.profile.Feedback">


    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/color_bg_blue">


        <Button
            android:id="@+id/btnGoBack4"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="372dp"
            android:layout_marginBottom="101dp"
            android:background="@drawable/backbutton2"
            android:textColor="@color/color_bg_gold"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBackToHome3"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="291dp"
            android:layout_marginBottom="104dp"
            android:text="Back"
            android:textColor="@color/color_bg_gold"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCategoriesTitle3"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="57dp"
            android:textColor="@color/color_bg_grey"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCategoriesTitle4"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="167dp"
            android:layout_marginBottom="13dp"
            android:text="FeedBack Form"
            android:textColor="@color/color_bg_grey"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <EditText
        android:id="@+id/fb_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:hint="Your name here"
        android:inputType="textPersonName"
        android:textAlignment="inherit" />

    <EditText
        android:id="@+id/fb_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:hint="Your email here"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/feedback_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/feedback_type" />

    <EditText
        android:id="@+id/fb_message"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:hint="Your Message here..."
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonk_customize"
            android:drawableLeft="@drawable/resetkisal"
            android:paddingHorizontal="20dp"
            android:text="Reset"
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonk_customize"
            android:drawableLeft="@drawable/ic_login_send"
            android:paddingHorizontal="20dp"
            android:text="Send"
            android:textColor="#ffff" />
    </LinearLayout>

</LinearLayout>