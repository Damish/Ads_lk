    <ImageButton
        android:id="@+id/profile_imgbtn1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_states"
        android:contentDescription="todo" />

    <EditText
        android:id="@+id/username_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:gravity="center"
        android:hint="UserName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/current_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:gravity="center"
        android:hint="CurrentPassword"
        android:inputType="textPersonName|textPassword" />

    <EditText
        android:id="@+id/new_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:gravity="center"
        android:hint="NewPassword"
        android:inputType="textPersonName|textPassword" />

    <EditText
        android:id="@+id/repeat_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border_1"
        android:ems="10"
        android:gravity="center"
        android:hint="Repeat Password"
        android:inputType="textPersonName|textPassword" />

    <Button
        android:id="@+id/change_pw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonk_customize"
        android:drawableLeft="@drawable/resetmanjip"
        android:paddingStart="40dp"
        android:text="Change Password"
        android:textColor="#FFFF"
        android:textSize="18sp" />

</LinearLayout>